<UserControl x:Class="AlghorithmsPerformanceCounter.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlghorithmsPerformanceCounter"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800"
             >
    <StackPanel>
        <StackPanel>
            <!-- First ArraySizes DataGrid -->

            <DataGrid Name="ArraySizeTable" CanUserResizeColumns="False" CanUserReorderColumns="False">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Performances Table DataGrid -->

            <DataGrid Name="PerformancesTable" CanUserResizeColumns="False" 
                      CanUserReorderColumns="False" AutoGenerateColumns="False"
                      HorizontalScrollBarVisibility="Disabled">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGrid>

        <!-- Charts -->
        </StackPanel>
        <lvc:CartesianChart MinHeight="200" x:Name="chart1">

        </lvc:CartesianChart>
        <TextBlock Text="Algorithms Performance Charts" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10"/>

        <Button x:Name="BackToMainViewButton" Content="Back to Main View" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,10" Click="BackToMainViewButton_Click"/>

    </StackPanel>
</UserControl>